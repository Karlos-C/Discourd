<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/FondNoir"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Titre de la page -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidentialité et Sécurité"
            android:textSize="24sp"
            android:textColor="@color/TitreBlanc"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:paddingBottom="16dp"/>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FondGrisFonce"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonActiverLocalisation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Activer ma localisation" />


            </LinearLayout>
        </FrameLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/FondGrisFonce"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonDesactiverLocalisation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Desctiver ma localisation" />


            </LinearLayout>





        </FrameLayout>
        <!-- Bouton retour à gauche -->
        <Button
            android:id="@+id/buttonRetourParametres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#1D1E23"
            android:text="Retour"
            android:textColor="@color/TitreBlanc"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"/>

    </LinearLayout>

</ScrollView>
