<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/FondNoir">

    <!-- Contenu défilable -->
    <ScrollView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Titre de la page -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paramètres"
                android:textSize="24sp"
                android:textColor="@color/TitreBlanc"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:paddingBottom="16dp"/>

            <!-- Première section : Paramètres du compte -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paramètres du compte"
                android:textColor="@color/SousTitreGris"
                android:paddingTop="8dp"
                android:paddingBottom="4dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/FondGrisFonce"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Bouton Compte -->
                    <LinearLayout
                        android:id="@+id/layoutCompte"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_profil" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Compte"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout>

                    <!-- Bouton Confidentialité & Sécurité -->
                    <LinearLayout
                        android:id="@+id/layoutConfidentialite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_confidentialite" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Confidentialité et Sécurité"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout>

                    <!-- Bouton Demandes d'amis -->
                    <LinearLayout
                        android:id="@+id/layoutDemandeAmis"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_demandes_amis" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Demandes d'amis"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

            <!-- Deuxième section : Paramètres de l'appli -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paramètres de l'appli"
                android:textColor="@color/SousTitreGris"
                android:paddingTop="16dp"
                android:paddingBottom="4dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/FondGrisFonce"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Apparence -->
                    <LinearLayout
                        android:id="@+id/layoutApparence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_apparence" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Apparence"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout>

                    <!-- Langue
                    <LinearLayout
                        android:id="@+id/layoutLangue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_langue" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Langue"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout> -->

                    <!-- Notifications -->
                    <LinearLayout
                        android:id="@+id/layoutNotifications"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_notifications" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Notifications"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout>

                    <!-- Autorisation caméra
                    <LinearLayout
                        android:id="@+id/layoutAutorisationCamera"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_camera" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Autorisation caméra"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout> -->

                    <!-- Avancés
                    <LinearLayout
                        android:id="@+id/layoutAvances"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/icone_reglages" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="16dp"
                            android:text="Avancés"
                            android:textColor="@color/TitreBlanc" />
                    </LinearLayout> -->

                </LinearLayout>
            </FrameLayout>
            <!-- Bouton se deconnecter -->
            <Button
                android:id="@+id/buttonDeconnexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/FondGrisFonce"
                android:text="Se  déconnecter  du  compte"
                android:textColor="#BF5048"
                android:fontFamily="sans-serif-medium"
                android:layout_gravity="center"
                android:padding="8dp"/>




        </LinearLayout>
    </ScrollView>

    <!-- Footer fixé en bas -->
    <include
        android:id="@+id/footer_navigation"
        layout="@layout/vue_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>