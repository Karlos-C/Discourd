<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="start"
    android:background="@color/FondNoir">

    <!-- Avatar de l'envoyeur -->
    <ImageView
        android:id="@+id/avatarMessageRecu"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_user_placeholder"
        android:contentDescription="Avatar"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:background="@android:color/darker_gray"
        android:elevation="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bubble_received"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/text_message_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pseudo envoyeur"
            android:textColor="@color/FondGrisFonce"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium" />

        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message reÃ§u"
            android:textColor="@color/FondGrisFonce"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/text_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/12/2024 12:34"
            android:textColor="@color/FondGrisFonce"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="4dp"
            android:gravity="start" />
    </LinearLayout>
</LinearLayout>
