<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1D1E23"
    tools:context=".vue.Vue_Connexion">

    <LinearLayout
        android:id="@+id/linearLayoutConnexion"
        android:layout_width="409dp"
        android:layout_height="380dp"
        android:background="@drawable/corner_rounded"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connectez vous"
            android:textAlignment="center"
            android:textColor="#EBEBEB"
            android:textSize="40sp"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/emailConnexion"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Entrez votre email"
            android:inputType="textEmailAddress"
            android:textAlignment="center"
            android:textColor="#EBEBEB"
            android:textColorHint="#868686"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="125dp"
            tools:layout_editor_absoluteY="81dp" />

        <EditText
            android:id="@+id/mdpConnexion"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:hint="Entrez votre mot de passe"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textColorHint="#868686"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="42dp" />

        <TextView
            android:id="@+id/allerVueInscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Pas encore de compte ? Inscrivez vous"
            android:textAlignment="center"
            android:textColor="#EBEBEB"
            android:textSize="15dp"
            tools:ignore="MissingConstraints" />

        <Button
            android:id="@+id/boutonConnexion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:backgroundTint="#3A3434"
            android:text="Se connecter"
            android:textAlignment="center"
            android:textColor="#EBEBEB"
            tools:layout_editor_absoluteX="132dp"
            tools:layout_editor_absoluteY="62dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>