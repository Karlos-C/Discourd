<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="end"
    android:background="@color/FondNoir">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bubble_sent"
        android:padding="12dp"
        android:elevation="4dp">

        <TextView
            android:id="@+id/text_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Message envoyÃ©"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/text_message_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/12/2024 12:34"
            android:textColor="@color/FondGrisFonce"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="4dp"
            android:gravity="end" />
    </LinearLayout>
</LinearLayout>
